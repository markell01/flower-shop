generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model flowers {
  id          String @id @default(uuid())
  type        String
  name        String
  description String
  price       Int
  path        String
}

model user {
  id        String    @id @default(uuid())
  username  String
  password  String
  firstname String
  lastname  String
  sessions  session[]
}

enum Role {
  USER
  ADMIN
}

model session {
  id      String @id @default(uuid())
  user_id String
  user    user   @relation(fields: [user_id], references: [id])
}
